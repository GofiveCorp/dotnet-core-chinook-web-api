@model IEnumerable<MyChinook_Web.Models.Dtos.AlbumDto>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Album List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Album" asp-action="CreateAlbum" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create New Album</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)//Show data to page from following items below
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Artist.Name</td>
                    <td>
                        <a asp-controller="Album" asp-action="UpdateAlbum" asp-route-Title="@item.Title" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Album" asp-action="DeleteAlbum" asp-route-Title="@item.Title" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>